{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "preserve",
    "importHelpers": true, 
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "./typings",
      "@nuxtjs/firebase",
      "@nuxtjs/pwa",
      "vuesax/types",
      "@nuxt/content",
    ]
  }
}
